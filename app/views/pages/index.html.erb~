<body>
<script type="IN/Login" data-onauth="onLinkedInAuth"></script>
<div id="alumni"></div>
</body>
<script type="text/javascript">

/* ------ LinkedIn --------*/
function onLinkedInLoad() {
IN.Event.on(IN, "auth", onLinkedInAuth);
}

function onLinkedInAuth() {
window.IN.API.Profile("me").fields(["id","email-address","first-name","last-name","maiden-name","date-of-birth","","educations:(id,school-name)","skills:(skill:(name))"]).result(displayProfiles);
}

function displayProfiles(profiles) {
var member = profiles.values[0];
document.getElementById("alumni").innerHTML ="<p> Nume si prenume: " + member.firstName+ " ("+member.maidenName+")" + member.lastName + "<br> Email: " + member.emailAddress + "<br>Data nasterii: "+member.dateOfBirth.day+"-"+member.dateOfBirth.month+"-"+member.dateOfBirth.year+" </p>";


}
</script>
