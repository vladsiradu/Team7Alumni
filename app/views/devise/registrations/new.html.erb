<head>
  <style type="text/css">
      .form-signin {
        max-width: 300px;
        padding: 9px 29px 29px;
        margin: 50px auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
      .linkedin-container{
	      
	      margin:20px auto;
      }
  </style>
      
</head>
<body>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
  <h4> Autentificare </h4>

  <div><%= f.label :Email %>
    <%= f.email_field :email %>
  </div>

  <div><%= f.label :Parola %>
    <%= f.password_field :password %>
  </div>

  <div><%= f.label :Confirma_parola %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :Grupa %>
    <%= f.text_field :group %>
  </div>

  <div class="field">
    <%= f.label :Promotia %>
    <%= f.text_field :promotion %>
  </div>

  <div class="field">
    <%=f.label :Specializarea %>
    <%= f.select :specialization, options_for_select(["Matematica", "Informatica", "Tehnologia Informatiei"]) %>
    </div>

  <div><%= f.submit "Creare cont" %></div>
<% end %>

