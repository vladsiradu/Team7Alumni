Rails.application.config.middleware.use OmniAuth::Builder do
  provider :linkedin, APP_KEY, APP_SECRET, client_options: {request_token_path: '/uas/oauth/requestToken?scope=r_emailaddress'}, fields: ['id', 'first-name', 'last-name', 'headline', 'industry', 'picture-url', 'public-profile-url', 'email-address', 'positions', 'skills', 'educations', 'volunteer', 'associations', 'specialties']
end
